<% layout("/layouts/boilerplate") %>
<body>
  
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter{

      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.8;
    }

    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }

    .filter p{
      font-size: 0.8rem;
    }

    .text-info{
      display: none;
    }

    .tex-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      padding: .9rem;
      height: 3rem;
      display: flex;
      align-items: center;
      margin-left: 2rem;
    }
  </style>



     <div id="filters" class="collapse" >
      <div class="filter">
