          <i class="fa-solid fa-fire-flame-curved"></i><p>Trending</p></i>
      
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-bed"></i><p>Bed</p></i>
      
        </div>
      </div>
      <div class="filter">
        <div>
          <i class="fa-solid fa-house"></i><p>House</p></i>
      
        </div>
      </div>
      <div class="filter">
        <div>
          <i class="fa-solid fa-city"></i><p>Iconic City</p></i>
      
        </div>
      </div>
      <div class="filter">
        <div>
          <i class="fa-solid fa-mountain-sun"></i><p>Mountains</p></i>
      
        </div>
      </div>
      <div class="filter">
        <div>
          <i class="fa-brands fa-fort-awesome"></i><p>Castles</p></i>
      
        </div>
      </div>
      <div class="filter">
        <div>
          <i class="fa-solid fa-person-swimming"></i><p>Amazing Pools</p></i>
      
        </div>
