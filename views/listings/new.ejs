<% layout("/layouts/boilerplate") %>
<div class="row mb-4 mt-3">
    <div class="col-8 offset-2">
<body>
    <h2>Create New Listing</h2>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="enter title" required class="form-control">
        <div class="invalid-feedback">Enter valid Title</div>
        </div>  


        <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <input type="text" class="form-control" name="listing[description]" required placeholder="enter description">
        <div class="invalid-feedback">Description required</div>
        </div>


        <div class="mb-2">
            <label for="image" class="form-label">Upload Listing Image</label>
        
        <input type="file" class="form-control" name="listing[image]"   >
        </div>  

        
        <div class="row">
            <div class="mb-2 col-4">
                <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" class="form-control"  required placeholder="enter price">
            <div class="invalid-feedback">Price Should be Valid</div>
            </div>
    
    
            <div class="mb-2 col-md-8">
                <label for="country" class="form-label">Country</label>
            <input type="text" required name="listing[country]" class="form-control" placeholder="enter country Name">
            <div class="invalid-feedback">Country</div>
            </div>  
    
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input type="text" required name="listing[location]" class="form-control" placeholder="enter location">
        
        <div class="invalid-feedback">Enter Location</div>
        </div>

        <button class="btn btn-edit mt-3">Add</button>
    </form> 
</body>
</div>
</div>
