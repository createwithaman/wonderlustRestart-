<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>SignUp For WonderLust</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            
            <!-- for UserName  -->
            <div class="mb-2">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" placeholder="enter title" required class="form-control">
            <div class="invalid-feedback">Enter valid UserName</div>
            </div>  

            <!-- for email  -->
        <div class="mb-2">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" placeholder="@gmail.com" required class="form-control">
            <div class="invalid-feedback">Enter valid mail Id</div>
            </div>

            <!-- for password  -->
        <div class="mb-2">
            <label for="password" class="form-label">Email</label>
            <input type="password" name="password" id="password" placeholder="enter password" required class="form-control">
            <div class="invalid-feedback">Enter valid password</div>
            </div>  
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>